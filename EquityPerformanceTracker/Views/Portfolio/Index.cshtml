@model List<EquityPerformanceTracker.Core.Models.Portfolio>
@{
    ViewData["Title"] = "My Portfolios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Portfolios</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Portfolio</a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var portfolio in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@portfolio.Name</h5>
                            <p class="card-text text-muted mb-3">@portfolio.Description</p>
                            
                            <!-- Main Performance Metrics -->
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Current Value</small>
                                    <div class="h5 text-primary mb-0">$@portfolio.CurrentValue.ToString("N2")</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Total Invested</small>
                                    <div class="h6 mb-0">$@portfolio.TotalInvested.ToString("N2")</div>
                                </div>
                            </div>
                            
                            <!-- Performance Results -->
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Gain/Loss</small>
                                    <div class="h5 @(portfolio.ActualTotalGainLoss >= 0 ? "text-success" : "text-danger") mb-0">
                                        $@portfolio.ActualTotalGainLoss.ToString("N2")
                                    </div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Return %</small>
                                    <div class="h5 @(portfolio.ActualGainLossPercentage >= 0 ? "text-success" : "text-danger") mb-0">
                                        @portfolio.ActualGainLossPercentage.ToString("N1")%
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Portfolio Info -->
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Holdings</small>
                                    <div>@portfolio.Holdings.Count(h => h.RemainingShares > 0) active</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Created</small>
                                    <div>@portfolio.CreatedDate.ToString("MM/dd/yyyy")</div>
                                </div>
                            </div>
                            
                            <!-- Plan vs Reality Alert -->
                            @if (Math.Abs(portfolio.InitialValue - portfolio.TotalInvested) > 1)
                            {
                                <div class="alert alert-light border py-2 px-3 mb-3">
                                    <small>
                                        <strong>Plan:</strong> $@portfolio.InitialValue.ToString("N0") 
                                        <strong>Actual:</strong> $@portfolio.TotalInvested.ToString("N0")
                                        <span class="@(portfolio.TotalInvested > portfolio.InitialValue ? "text-success" : "text-warning")">
                                            (@(portfolio.TotalInvested > portfolio.InitialValue ? "+" : "")@((portfolio.TotalInvested - portfolio.InitialValue).ToString("N0")))
                                        </span>
                                    </small>
                                </div>
                            }
                            
                            <!-- Action Buttons -->
                            <div class="mt-auto">
                                <div class="d-grid gap-2">
                                    <a asp-action="Details" asp-route-id="@portfolio.Id" class="btn btn-outline-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Portfolio Summary Stats -->
            var totalCurrentValue = Model.Sum(p => p.CurrentValue);
            var totalInvested = Model.Sum(p => p.TotalInvested);
            var totalGainLoss = totalCurrentValue - totalInvested;
            var totalReturnPercent = totalInvested > 0 ? (totalGainLoss / totalInvested) * 100 : 0;
            var activeHoldings = Model.Sum(p => p.Holdings.Count(h => h.RemainingShares > 0));
                
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title text-muted mb-3">Portfolio Summary</h6>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="h4 text-primary">$@totalCurrentValue.ToString("N2")</div>
                                <small class="text-muted">Total Portfolio Value</small>
                            </div>
                            <div class="col-md-3">
                                <div class="h4">$@totalInvested.ToString("N2")</div>
                                <small class="text-muted">Total Invested</small>
                            </div>
                            <div class="col-md-3">
                                <div class="h4 @(totalGainLoss >= 0 ? "text-success" : "text-danger")">
                                    $@totalGainLoss.ToString("N2")
                                </div>
                                <small class="text-muted">Total Gain/Loss</small>
                            </div>
                            <div class="col-md-3">
                                <div class="h4 @(totalReturnPercent >= 0 ? "text-success" : "text-danger")">
                                    @totalReturnPercent.ToString("N1")%
                                </div>
                                <small class="text-muted">Overall Return</small>
                            </div>
                        </div>
                        <div class="row text-center mt-3">
                            <div class="col-md-6">
                                <div class="h5">@Model.Count</div>
                                <small class="text-muted">Total Portfolios</small>
                            </div>
                            <div class="col-md-6">
                                <div class="h5">@activeHoldings</div>
                                <small class="text-muted">Active Holdings</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h4 class="text-muted">No portfolios yet</h4>
            <p>Create your first portfolio to start tracking your investments!</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">Create Your First Portfolio</a>
        </div>
    }
</div>