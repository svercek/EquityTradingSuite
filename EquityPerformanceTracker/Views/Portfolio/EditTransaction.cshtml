@model EquityPerformanceTracker.Core.Models.Transaction
@{
    ViewData["Title"] = "Edit Sale Transaction";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Edit @Model.Symbol Sale Transaction</h2>
            <p class="text-muted">Portfolio: @Model.Portfolio.Name</p>
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            
            <form asp-action="EditTransaction" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PortfolioId" />
                <input type="hidden" asp-for="HoldingId" />
                <input type="hidden" asp-for="Symbol" />
                <input type="hidden" asp-for="CompanyName" />
                <input type="hidden" asp-for="Type" />
                <input type="hidden" asp-for="CreatedDate" />
                
                <div class="mb-3">
                    <label class="form-label">Stock Symbol</label>
                    <input type="text" value="@Model.Symbol" class="form-control" readonly />
                </div>
                
                <div class="mb-3">
                    <label asp-for="Shares" class="form-label">Shares Sold *</label>
                    <input asp-for="Shares" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Shares" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Sale Price per Share *</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="TransactionDate" class="form-label">Sale Date *</label>
                    <input asp-for="TransactionDate" class="form-control" type="date" />
                    <span asp-validation-for="TransactionDate" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Reason for sale..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Update Transaction</button>
                    <a asp-action="Details" asp-route-id="@Model.PortfolioId" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
