@model EquityPerformanceTracker.Core.Models.PortfolioHolding
@{
    ViewData["Title"] = "Edit Holding";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Edit @Model.Symbol Holding</h2>
            <p class="text-muted">Portfolio: @Model.Portfolio.Name</p>
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            
            <form asp-action="EditHolding" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PortfolioId" />
                <input type="hidden" asp-for="CurrentPrice" />
                <input type="hidden" asp-for="LastPriceUpdate" />
                
                <div class="mb-3">
                    <label asp-for="Symbol" class="form-label">Stock Symbol *</label>
                    <input asp-for="Symbol" class="form-control" style="text-transform: uppercase" />
                    <span asp-validation-for="Symbol" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Shares" class="form-label">Number of Shares *</label>
                    <input asp-for="Shares" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Shares" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="PurchasePrice" class="form-label">Purchase Price per Share *</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" min="0.01" />
                    </div>
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
                    <input asp-for="PurchaseDate" class="form-control" type="date" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Update Holding</button>
                    <a asp-action="Details" asp-route-id="@Model.PortfolioId" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('Symbol').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });
    </script>
}